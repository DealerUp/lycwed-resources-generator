#!/usr/bin/env node

var path = require('path');
var generator = require(path.resolve(__dirname, '../index'));
var argv = require('yargs').argv;

var baseImagesPath = argv.imagespath || 'resources';
var platforms = argv.platforms || 'ios, android';

generator.generate({
	ICON_FILE: path.join(baseImagesPath, 'icon.png'),
	SPLASH_FILE: path.join(baseImagesPath, 'splash.png'),
	PLATFORMS: platforms.split('/(,+)(\s*)/g')
}); 
